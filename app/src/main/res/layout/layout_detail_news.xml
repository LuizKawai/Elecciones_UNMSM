<?xml version="1.0" encoding="utf-8"?>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true"
    app:layout_scrollFlags="scroll|enterAlways"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"


        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_news"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:drawingCacheQuality="low"
            android:layout_width="match_parent"
            android:layout_height="280dp" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/candidate_title"
                android:gravity="center"
                android:text="Nombre de Partido"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/primary_text"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="0dp"
                android:id="@+id/party_title"
                android:gravity="center"
                android:text="Candidato de Partido"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:textColor="@color/primary_text"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_logo"
                android:layout_marginTop="4dp"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <View
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:background="@color/black"
                android:layout_height="1dp"></View>
            <TextView
                android:layout_marginTop="4dp"
                android:textSize="@dimen/secondary_text"
                android:id="@+id/tv_ola_morada"
                android:layout_gravity="center"
                android:text="#EleccionesUNSM2016"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:padding="10dp"
                android:id="@+id/news_description"
                android:textSize="@dimen/secondary_text"
                android:layout_gravity="center"
                android:text="Lorem"
                android:textColor="@color/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="5dp"
                android:textSize="@dimen/secondary_text"
                android:layout_gravity="left"
                android:text="Propuestas"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:id="@+id/proposal"
                android:layout_marginLeft="14dp"
                android:textSize="@dimen/secondary_text"
                android:layout_gravity="left"
                android:text="Lorem"
                android:textColor="@color/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/image_candidate"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:drawingCacheQuality="low"
                android:layout_width="match_parent"
                android:layout_height="280dp" />

            <TextView
                android:padding="10dp"
                android:id="@+id/biografia_description"
                android:textSize="@dimen/secondary_text"
                android:layout_gravity="center"
                android:text="Lorem"
                android:textColor="@color/primary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
